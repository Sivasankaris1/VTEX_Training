{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "lib": ["DOM", "ES6"],
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES6",
    "skipLibCheck": true
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts",
    "./**/**/*.tsx"
  ]
}